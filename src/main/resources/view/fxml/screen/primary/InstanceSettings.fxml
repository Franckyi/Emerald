<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXTabPane?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<JFXTabPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.201-ea"
            fx:controller="com.github.franckyi.emerald.controller.screen.primary.InstanceSettingsController"
            styleClass="container">
    <Tab text="General" fx:id="generalTab">
        <VBox alignment="CENTER">
            <HBox alignment="CENTER" spacing="20.0" styleClass="surface">
                <Label styleClass="subhead" text="Instance name"/>
                <JFXTextField fx:id="instanceNameField" prefWidth="250"/>
            </HBox>
        </VBox>
    </Tab>
    <Tab text="Mods" fx:id="minecraftTab">
        <VBox alignment="CENTER">
        </VBox>
    </Tab>
    <Tab text="Resource Packs" fx:id="dataStorageTab">
        <VBox alignment="CENTER">
        </VBox>
    </Tab>
</JFXTabPane>
